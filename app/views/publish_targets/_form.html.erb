<%= form_for(@publish_target) do |f| %>
  <% if @publish_target.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@publish_target.errors.count, "error") %> prohibited this publish target from being saved:</h2>

      <ul>
      <% @publish_target.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :display_label %>
    <%= f.text_field :display_label, {class: 'form-control'} %>
  </div>

  <div class="field">
    <%= f.label :pid %>
    <%= f.text_field :pid, {class: 'form-control', disabled: true, value: @publish_target.new_record? ? '- Automatically Generated -' : @publish_target.pid} %>
  </div>
  
  <div class="field">
    <%= f.label :string_key %> (cannot be changed)
    <% if @publish_target.new_record? %>
      <%= f.text_field :string_key, {class: 'form-control'} %>
    <% else %>
      <%= f.text_field :string_key, {class: 'form-control', disabled: true, value: @publish_target.string_key} %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :publish_url %>
    <%= f.text_field :publish_url, {class: 'form-control'} %>
  </div>
  
  <div class="field">
    <%= f.label :api_key %>
    <%= f.text_field :api_key, {class: 'form-control'} %>
  </div>

  <div class="actions">
    <%= f.submit('Save', class: 'btn btn-primary') %>
  </div>
<% end %>
